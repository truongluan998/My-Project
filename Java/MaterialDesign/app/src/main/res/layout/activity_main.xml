<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:src="@drawable/car_logo"
        android:transitionName="logo_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Made in Viet Nam"
        android:textSize="45sp"
        android:gravity="center"
        android:padding="10dp"
        android:transitionName="logo_text"
        android:textColor="#01579B"
        android:fontFamily="@font/bangers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_main" />

    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antic_regular"
        android:text="Nation wide Royal Car rental app"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#0288D1"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>